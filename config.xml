<?xml version='1.0' encoding='utf-8'?>
<widget
    id="com.interlab.noticias"
    version="1.1.69"
    versionCode="87"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>interlab</name>
    <description>
        Aplicacion para INTERLAB.
    </description>
   <author href="http://keyframe.com/" email="epulgar@keyframe.ec">
Epulgar
		</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay"    value="1300" />
    <preference name="SplashScreen"         value="screen" />
    <cdv:plugin name="org.apache.cordova.splashscreen" />

    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.GeoBroker" />
    </feature>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <icon src="imagenes/iconos/57x57.png" gap:platform="ios" width="57" height="57" />
		<icon src="imagenes/iconos/72x72.png" gap:platform="ios" width="72" height="72" />
		<icon src="imagenes/iconos/114x114.png" gap:platform="ios" width="114" height="114" />
		<icon src="imagenes/iconos/144x144.png" gap:platform="ios" width="144" height="144" />
		<icon src="imagenes/iconos/76x76.png" gap:platform="ios" width="76" height="76" />
		<icon src="imagenes/iconos/120x120.png" gap:platform="ios" width="120" height="120" />
		<icon src="imagenes/iconos/152x152.png" gap:platform="ios" width="152" height="152" />
		<icon src="imagenes/iconos/36x36.png" gap:platform="android" gap:density="ldpi" />
		<icon src="imagenes/iconos/48x48.png" gap:platform="android" gap:density="mdpi" />
		<icon src="imagenes/iconos/72x72.png" gap:platform="android" gap:density="hdpi" />
		<icon src="imagenes/iconos/96x96.png" gap:platform="android" gap:density="xhdpi" />
		<icon src="imagenes/iconos/144x144.png" gap:platform="android" gap:density="xxhdpi" />
		<icon src="imagenes/iconos/192x192.png" gap:platform="android" gap:density="xxxhdpi" />
		<gap:splash src="imagenes/splash/320x480.png" gap:platform="ios" width="320" height="480" />
		<gap:splash src="imagenes/splash/640x960.png" gap:platform="ios" width="640" height="960" />
		<gap:splash src="imagenes/splash/640x1136.png" gap:platform="ios" width="640" height="1136" />
		<gap:splash src="imagenes/splash/240x400.png" gap:platform="android" gap:density="ldpi" />
		<gap:splash src="imagenes/splash/320x480.png" gap:platform="android" gap:density="mdpi" />
		<gap:splash src="imagenes/splash/480x800.png" gap:platform="android" gap:density="hdpi" />
		<gap:splash src="imagenes/splash/720x960.png" gap:platform="android" gap:density="xhdpi" />
		<gap:splash src="imagenes/splash/1080x1920.png" gap:platform="android" gap:density="xxhdpi" />
		<gap:splash src="splash.png" />
</widget>
